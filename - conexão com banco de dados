<?php
include "connect.php";
echo "<h1>Dados dos Alunos</h1>";

//exibir dados do banco
$sql = mysqli_query($link,"select * from tb_alunos");
while($dados = mysqli_fetch_array($sql)){
	echo "$dados[id_aluno]<br>";
	echo "$dados[nome]<br>";
	echo "$dados[email]<br>";
	echo "$dados[senha]<hr>";
}	

